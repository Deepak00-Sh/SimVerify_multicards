<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane id="borderPane" fx:id="borderPane" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mannash.simcardvalidation.SimVerifyMasterThread2">
    <top>
        <HBox style="-fx-background-color: #D3D3D3;" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <ImageView fitHeight="49.0" fitWidth="123.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/airtel_logo.png" />
                    </image>
                    <HBox.margin>
                        <Insets left="6.0" top="7.0" />
                    </HBox.margin>
                </ImageView>
                <VBox prefHeight="59.0" prefWidth="405.0">
                    <children>
                        <Label id="exportMessage" fx:id="exportMessage" alignment="BOTTOM_CENTER" prefHeight="36.0" prefWidth="393.0" visible="false">
                            <VBox.margin>
                                <Insets left="24.0" top="9.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </VBox>
                <Region prefHeight="59.0" prefWidth="189.0" HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER">
                    <ImageView fitHeight="38.0" fitWidth="47.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                        <image>
                            <Image url="@images/user.png" />
                        </image>
                        <viewport>
                            <Rectangle2D />
                        </viewport>
                        <HBox.margin>
                            <Insets bottom="5.0" left="6.0" top="10.0" />
                        </HBox.margin>
                    </ImageView>
                    <MenuButton id="logOut" fx:id="logOut" mnemonicParsing="false" text="Profile">
                        <items>
                            <MenuItem id="updateButton" fx:id="updateButton" mnemonicParsing="false" onAction="#checkUpdate" text="Update App" />
                        </items>
                        <items>
                            <MenuItem id="logOutButton" fx:id="logOutButton" mnemonicParsing="false" onAction="#logOut" text="Log Out" />
                        </items>
                        <HBox.margin>
                            <Insets left="5.0" top="5.0" />
                        </HBox.margin>
                    </MenuButton>
                    <HBox.margin>
                        <Insets right="15.0" />
                    </HBox.margin>


                </HBox>
            </children>
        </HBox>
    </top>

    <center>
        <GridPane id="mainGridPane" fx:id="mainGridPane" prefHeight="409.0" prefWidth="479.0" style="-fx-background-color: white; -fx-background-image: com/mannash/javafxapplication/fxml/images/airtel-logo-f.png;">
            <BorderPane.margin>
                <Insets left="5.0" top="0.5" />
            </BorderPane.margin>
            <padding>
                <Insets top="5.0" />
            </padding>
        </GridPane>

    </center>
    <left>
        <VBox id="cardsConnectedVbox" fx:id="cardsConnectedVbox" prefHeight="413.0" prefWidth="175.0" style="-fx-background-color: white; -fx-border-width: 0 0 0 0; -fx-border-color: #ECF2FF;" BorderPane.alignment="CENTER">
            <children>
                <HBox prefHeight="32.0" prefWidth="194.0" style="-fx-background-color: lightgrey;">
                    <children>
                        <Label alignment="BOTTOM_LEFT" maxWidth="-Infinity" prefHeight="36.0" prefWidth="175.0" style="-fx-background-color: lightgrey;" text="CONNECTED CARDS" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <padding>
                                <Insets bottom="5.0" left="7.0" top="5.0" />
                            </padding>
                        </Label>
                        <ImageView id="exportIcon" fx:id="exportIcon" fitHeight="26.0" fitWidth="21.0" onMouseClicked="#onExportButtonPress" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;" visible="false">
                            <image>
                                <Image url="@images/export.png" />
                            </image>
                            <HBox.margin>
                                <Insets right="10.0" top="3.0" />
                            </HBox.margin>
                        </ImageView>

                    </children>
                </HBox>

                <ListView id="cardsConnectedList" fx:id="cardsConnectedList" maxHeight="-Infinity" prefWidth="175.0" style="-fx-background-color: inherit;" VBox.vgrow="ALWAYS">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </ListView>
            </children>
            <opaqueInsets>
                <Insets right="10.0" />
            </opaqueInsets>
            <BorderPane.margin>
                <Insets top="1.0" />
            </BorderPane.margin>
        </VBox>

    </left>
    <right>
        <VBox prefHeight="200.0" prefWidth="250.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="175.0">
                    <children>
                        <ImageView id="startTestingButton" fx:id="startTestingButton" fitHeight="100.0" fitWidth="200.0" onMouseClicked="#onStartButtonPress" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                            <image>
                                <Image url="@images/button_Start_Testing.png" />
                            </image>
                        </ImageView>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="5.0" />
                    </VBox.margin>
                </HBox>
                <VBox id="simCardVbox" fx:id="simCardVbox" prefHeight="353.0" prefWidth="250.0" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets right="5.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </right>

</BorderPane>
